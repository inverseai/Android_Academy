<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="homeScreenTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/double_margin_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="homeScreenLargeTextStyle" parent="homeScreenTextStyle">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="homeScreenMediumTextStyle" parent="homeScreenTextStyle">
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="plusMinusButtonStyle" >
        <item name="android:layout_width">@dimen/plus_minus_button_bg_dimension</item>
        <item name="android:background">@drawable/round_bg</item>
        <item name="android:layout_height">@dimen/plus_minus_button_bg_dimension</item>
        <item name="android:layout_margin">@dimen/default_margin_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
